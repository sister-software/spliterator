# http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.crlf.*]
end_of_line = crlf

[**/test/fixtures/*.{txt}]
insert_final_newline = false
trim_trailing_whitespace = false
